<div id="calendar">
  <div class="calendar-top">
    <%= form_with model: Bullet.new, authenticity_token: true do |f| %>
      <%= f.text_field :start_time,
        data: {
          controller: "flatpickr",
          flatpickr_date_format: "Y-m-d",
          # flatpickr_min_date: Time.zone.now,
          flatpickr_close_on_select: "false",
          flatpickr_inline: "true",
          flatpickr_month_selector_type: "dropdown",
          flatpickr_week_numbers: "true"
        } %>
    <% end %>
  </div>
  <%= render "events/events", events: events, new_event: new_event %>
</div>
