<div class="bullet-list" data-search-bullets-target="list">
    <%= render "shared/searchbar" %>
  <ul>
    <% bullets.each do |bullet|  %>
    <li data-controller="bullet-list">
      <%= form_with url: bullet_path(bullet),
        method: :patch,
        html:
          { id: "bullet-#{bullet.id}",
            data: {
              bullet_list_target: "bullet",
              action: 'keyup->bullet-list#update' } } do |f| %>
      <div class="form-inputs" data-bullet-list-target="input">
        <%= f.text_field :content, autocomplete: "off", value: bullet.content, label:false %>
      </div>
      <% end %>
    </li>
    <% end %>
    <li>
      <%= form_with url: bullets_path,
        method: :post,
        local: false,
        html: { id: "bullet-new",
          data: { bullet_list_target: "new" } } do |f| %>
      <div class="form-inputs">
        <%= f.text_field :content, autofocus: true, autocomplete: "off", label:false %>
      </div>
      <% end %>
    </li>
  </ul>
</div>
