<div class="events-container" id="events-list" data-event-list-target="eventList" droppable="true" ondragover="onDragOver(event);" ondrop="onDrop(event);" ondragenter="onDragEnter(event)">
  <% events.each do |event| %>
    <div id=<%="event-#{event.id}"%> class="event">
      <div class="title">
        <p id="title-content"><%= event.title %></p>
      </div>
      <div class="time">
        <div class="time-from">
          <p><%= event.hour_start ? event.hour_start.strftime("%H:%M") : "--:--" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
